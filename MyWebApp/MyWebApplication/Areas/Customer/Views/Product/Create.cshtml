@model Product
<form method="post">
    <fieldset>
        <div class="form-group">
            <label for="exampleInputName" class="form-label mt-4">Name</label>
            <input type="text" asp-for="Name" class="form-control" id="exampleInputName" aria-describedby="nameHelp" placeholder="Enter name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="">
                <label for="exampleInputDescription" class="form-label mt-4">Description</label>
                <input type="text" asp-for="Description" class="form-control" id="exampleInputDescription" placeholder="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="">
                <label for="exampleInputPrice" class="form-label mt-4">Price</label>
                <input type="text" asp-for="Price" class="form-control" id="exampleInputPrice" placeholder="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div style="padding-top:10px;">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
        <div class="test">
            <div class="row">
                <div class="col-6">
                    <a asp-area="Customer" asp-controller="Category" asp-action="Index">Back to list</a>
                </div>
            </div>
        </div>
    </fieldset>

</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
