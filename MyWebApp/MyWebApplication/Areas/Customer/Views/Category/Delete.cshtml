@model Category
<form method="post">
    <fieldset>
        <input type="hidden"  asp-for="Id"/>
        <div class="form-group">
            <label for="exampleInputName" class="form-label mt-4">Name</label>
            <input disabled type="text" asp-for="Name" class="form-control" id="exampleInputName" aria-describedby="nameHelp" placeholder="Enter name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="">
                <label for="exampleInputDisplayOrder" class="form-label mt-4">DisplayOrder</label>
                <input disabled type="number" asp-for="DisplayOrder" class="form-control" id="exampleInputDisplayOrder" placeholder="DisplayOrder">
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

            <div style="padding-top:10px;">
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </div>
        <div class="test">
            <div class="row">
                <div class="col-6">
                    <a asp-area="Customer" asp-controller="Category" asp-action="Index">Back to list</a>
                </div>
            </div>
        </div>
    </fieldset>
   
</form>

@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
