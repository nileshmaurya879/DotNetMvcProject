@model IEnumerable<Product>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h4>Product</h4>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="Customer" asp-controller="Product" asp-action="Create"><i class="bi bi-plus-circle"></i>&nbsp; Create New Product</a>
        </div>
    </div>
</div>


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">CategoryID</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-active">
                <td scope="row">
                    @item.Name
                </td>
                <td scope="row">
                    @item.Description
                </td>
                <td scope="row">
                    @item.Price
                </td>
                <td scope="row">
                    @item.CategoryId
                </td>
                <td scope="row">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId"><i class="bi bi-pencil-square"></i></a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>